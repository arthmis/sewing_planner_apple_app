        font-size: 0.875rem;
        transition: color 0.2s ease;
    }

    .footer-link:hover {
        color: #3b82f6;
    }

    .separator {
        color: #9ca3af;
        font-size: 0.875rem;
    }

    .footer-copyright {
        text-align: center;
    }

    .footer-copyright p {
        color: #6b7280;
        font-size: 0.875rem;
        margin: 0;
    }

    @media (min-width: 768px) {
        .footer-container {
            flex-direction: row;
            justify-content: space-between;
        }
    }
